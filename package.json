{
  "name": "try-pipelines",
  "version": "1.0.1",
  "description": "A minimal Electron application",
  "main": "main.ts",
  "scripts": {
    "start": "yarn build && electron ./compiled/main.js",
    "build": "tsc",
    "watch": "tsc -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64 --ia32",
    "dist:mac": "electron-builder --mac"
  },
  "repository": "https://github.com/rwhitmire/try-pipelines",
  "author": "Ryan Whitmire",
  "devDependencies": {
    "@types/electron-spellchecker": "^1.1.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "electron": "^5.0.7",
    "electron-builder": "^21.1.1",
    "electron-notarize": "^0.1.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "build": {
    "appId": "com.velaro.chat",
    "mac": {
      "category": "your.app.category.type",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
