{
  "name": "velaro",
  "version": "1.0.1",
  "description": "Velaro chat client",
  "main": "./compiled/main.js",
  "repository": "https://github.com/rwhitmire/try-pipelines",
  "author": "Velaro",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn build && cross-env VELARO_ENV=development electron ./compiled/main.js",
    "copy": "node scripts/copy.js",
    "build": "yarn copy && tsc",
    "watch": "yarn copy && tsc -w",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "yarn rebuild",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64 --ia32",
    "dist:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "@types/electron-spellchecker": "^1.1.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "copy": "^0.3.2",
    "cross-env": "^5.2.0",
    "electron": "^5.0.7",
    "electron-builder": "^21.1.1",
    "electron-notarize": "^0.1.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "build": {
    "appId": "com.Velaro.Velaro",
    "productName": "Velaro",
    "mac": {
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "@paulcbetts/system-idle-time": "^1.0.5",
    "electron-spellchecker": "^2.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
