{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "trailing-comma": false,
    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false,
    "no-shadowed-variable": false,
    "no-console": false,
    "arrow-parens": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
